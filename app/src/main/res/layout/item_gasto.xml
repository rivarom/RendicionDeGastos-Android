<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDescripcionGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del Gasto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewFechaGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iconoFotoRecibo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_foto_recibo"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        android:contentDescription="Ícono de recibo adjunto"/>

    <TextView
        android:id="@+id/textViewMontoGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 0.00"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>